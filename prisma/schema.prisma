// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model notice_table{
  notice_id Int @id
  title String
  context String
  start_date DateTime
  end_date  DateTime
  updated_date DateTime
}

model action_table{
  action_id Int @id
  action_name String
}

model  career_action_table{
  career_action_id Int @id
  user_id_f String 
  action_date DateTime
  notes String?
  updated_date DateTime
  career_path_id_f Int
  action_id_f Int
  
  career_path_id career_path_table @relation(fields: [career_path_id_f], references: [career_path_id])
  action_id action_table @relation(fields: [action_id_f], references: [action_id])
  user_id user_table @relation(fields: [user_id_f], references: [user_id])
}

model career_path_table{
  career_path_id Int @id
  career_path_name String
  furigana String
  website String
}

model contact_table{
  contact_user_id String @id
  contact_type String
  phone_number Int
  email String
  address String

  user_id user_table  @relation(fields: [contact_user_id], references: [user_id])
}

model cource_table{
  cource_id Int @id
  course_name String
}

model job_listing_table{
  job_listing_id Int @id
  application_format String 
  submission_date DateTime
  visit_date DateTime
  updated_date DateTime
  career_path_id_f Int

  career_path_id career_path_table @relation(fields: [career_path_id_f], references: [career_path_id])
}

model student_table{
  student_id_f String @id
  student_name String
  furigana String
  gender String
  is_enrolled Boolean
  grade Int
  graduation_year Int
  face_photo String
  updated_date DateTime
  cource_id_f Int
  teacher_id_f String

  user_id user_table @relation(name: "student_user",fields: [student_id_f], references: [user_id])
  cource_id cource_table @relation(fields: [cource_id_f],references:[cource_id])
  teacher_id user_table @relation(name: "teacher_user",fields: [teacher_id_f], references: [user_id])
}

model teacher_table{
  user_id String @id
  teacher_name String
  furigana String
  subject String
  user user_table @relation(fields: [user_id], references: [user_id])
}

model user_table{
  user_id String @id
  user_type String
}